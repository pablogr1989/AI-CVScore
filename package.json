{
  "name": "ai-cvscore",
  "version": "1.0.0",
  "type": "module",
  "description": "Generador de CV mediante IA ajustado a ofertas concretas",
  "main": "dist/main.js",
  "author": "Pablo Gómez Ramírez",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "generate": "node dist/index.js",
    "start": "electron .",
    "electron:dev": "tsc && electron .",
    "dist": "npm run build && electron-builder",
    "lint": "eslint \"src/**/*.{ts,cts}\"",
    "format": "prettier --write \"src/**/*.{ts,cts,html,css}\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "openai": "^4.26.0",
    "puppeteer": "^22.6.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "5.5.4",
    "vitest": "^1.3.1"
  },
  "build": {
    "appId": "com.pablogr.aicvscore",
    "productName": "AI CVScore",
    "copyright": "Copyright © 2026 Pablo Gómez Ramírez",
    "directories": {
      "output": "dist-installer",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      { "from": "templates", "to": "templates", "filter": ["**/*"] },
      { "from": "data", "to": "data", "filter": ["**/*"] },
      { "from": "assets", "to": "assets", "filter": ["**/*"] },
      { "from": "bin", "to": "bin", "filter": ["**/*"] },
      { "from": "prompts", "to": "prompts", "filter": ["**/*"] },
      { "from": "few-shots", "to": "few-shots", "filter": ["**/*"] },
      { "from": ".env", "to": ".env" }
    ],
    "win": {
      "target": ["nsis"],
      "executableName": "ai-cvscore"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "AI CVScore",
      "artifactName": "AI-instalador.${ext}"
    },
    "asar": true
  }
}